<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.view.PrimaryController">
   <children>
      <Label text="Select Language:" />
      <ComboBox fx:id="languageDropdown" prefWidth="150"/>
      <Button text="Confirm Language" onAction="#onConfirmLanguage" />

      <Label fx:id="titleLabel" text="CATAN Config Data" />

      <Label fx:id="gameRulesTitleLabel" text="Game Rules Config" />
      <Label fx:id="gameRulesDynamicLabel" text="Loading... " />

      <Label fx:id="resourceTitleLabel" text="Resource Config" />
      <Label fx:id="resourceDynamicLabel" text="Loading... " />

      <Label fx:id="portTitleLabel" text="Port Config" />
      <Label fx:id="portDynamicLabel" text="Loading... " />

      <Label fx:id="infrastructureTitleLabel" text="Player Infrastructure Config" />
      <Label fx:id="infrastructureDynamicLabel" text="Loading... " />

      <Label fx:id="tilesTitleLabel" text="Game Tiles Config" />
      <Label fx:id="tilesDynamicLabel" text="Loading... " />

      <Label fx:id="devCardTitleLabel" text="Development Cards Config" />
      <Label fx:id="devCardDynamicLabel" text="Loading... " />
      <Label text="Primary View" />
      <Button fx:id="primaryButton" text="Switch to Secondary View" onAction="#switchToSecondary"/>
      <Button fx:id="titleButton" text="Switch to Title Screen" onAction="#switchToTitle"/>
      <Button fx:id="testButton" text="Switch to Test Screen" onAction="#switchToTest"/>

   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>
