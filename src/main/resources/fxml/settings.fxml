<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.Double?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.shape.Polygon?>
<?import javafx.scene.canvas.Canvas?>
<?import javafx.geometry.Pos?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.layout.Region?>

<StackPane fx:id="rootPane"
           prefHeight="864.0"
           prefWidth="1536.0"
           xmlns="http://javafx.com/javafx/25"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="com.example.view.SettingsV"
           alignment="CENTER">

    <!-- Background -->
    <Canvas fx:id="hexCanvas" width="1536.0" height="864.0"/>

        <!-- Centered VBox -->
        <VBox fx:id="menuBox"
            styleClass="menu-box"
            alignment="TOP_CENTER"
            spacing="20"
            prefWidth="500"
            prefHeight="400"
            maxWidth="800"
            maxHeight="400">
            
            <!-- Title -->
            <Label text="Settings" styleClass="prompt-text-large"/>

            <!-- ComboBoxes + Slider Section (with labels, left-edge centered) -->
            <VBox fx:id="comboBoxSection"
                spacing="15"
                alignment="TOP_CENTER">

                <!-- Row 1: Language -->
                <HBox spacing="10" alignment="CENTER_LEFT">
                    <Region HBox.hgrow="ALWAYS"/>
                    <Label fx:id="languageLabel" text="Language:" styleClass="menu-label"
                        minWidth="150" alignment="CENTER_RIGHT"/>
                    <ComboBox fx:id="languageCombo" prefWidth="400" maxWidth="400"/>
                </HBox>

                <!-- Row 2: Text Size -->
                <HBox spacing="10" alignment="CENTER_LEFT">
                    <Region HBox.hgrow="ALWAYS"/>
                    <Label fx:id="textSizeLabel" text="Text Size:" styleClass="menu-label"
                        minWidth="150" alignment="CENTER_RIGHT"/>
                    <ComboBox fx:id="textSizeCombo" prefWidth="400" maxWidth="400"/>
                </HBox>

                <!-- Row 3: Resolution -->
                <HBox spacing="10" alignment="CENTER_LEFT">
                    <Region HBox.hgrow="ALWAYS"/>
                    <Label fx:id="resolutionLabel" text="Resolution:" styleClass="menu-label"
                        minWidth="150" alignment="CENTER_RIGHT"/>
                    <ComboBox fx:id="resolutionCombo" prefWidth="400" maxWidth="400"/>
                </HBox>

                <!-- Row 4: Volume Slider -->
                <HBox spacing="10" alignment="CENTER_LEFT">
                    <Region HBox.hgrow="ALWAYS"/>
                    <Label fx:id="volumeLabel" text="Volume:" styleClass="menu-label"
                        minWidth="150" alignment="CENTER_RIGHT"/>
                    <Slider fx:id="volumeSlider" prefWidth="320" maxWidth="320" min="0" max="100" value="50"/>
                    <Label fx:id="volumeValueLabel" text="50" styleClass="menu-label"
                        minWidth="70" maxWidth="70" alignment="CENTER_RIGHT"/>
                </HBox>


            </VBox>




            <!-- Play Game button -->
            <StackPane fx:id="playStack" alignment="CENTER">
                <HBox fx:id="playHBox"
                    spacing="20"
                    alignment="CENTER"
                    styleClass="menu-item">

                    <Polygon fx:id="playHex"
                            styleClass="hexagon"
                            fill="DODGERBLUE"
                            stroke="BLACK"
                            strokeType="INSIDE">
                        <points>
                            <Double fx:value="0"/><Double fx:value="-25"/>
                            <Double fx:value="21.65"/><Double fx:value="-12.5"/>
                            <Double fx:value="21.65"/><Double fx:value="12.5"/>
                            <Double fx:value="0"/><Double fx:value="25"/>
                            <Double fx:value="-21.65"/><Double fx:value="12.5"/>
                            <Double fx:value="-21.65"/><Double fx:value="-12.5"/>
                        </points>
                    </Polygon>

                    <Label fx:id="playText"
                        text="Play Game"
                        styleClass="menu-label"/>
                </HBox>
            </StackPane>
    </VBox>
</StackPane>
